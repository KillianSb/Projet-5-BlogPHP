{% extends 'base/base.twig' %}

{% block connection %} 
{% if user.username is defined %} 
<p>Bonjours {{user.username}}</p> 
<li><a href="deconnexion">DECONNEXION</a></li>
{% else %}
<li><a href="connexion">CONNEXION</a></li>
{% endif %} 

{% if IsAdmin == true %} 
<li><a href="admin">ADMIN</a></li>
{% endif %}
{% endblock connection %}

{% block content %}
    
    <h1>Création de Commentaire</h1>

    
    <form name="register" method="post" action="createPost">
    <input type="hidden" name="post_id" value="{{post_id}}">
    <textarea name="comment" placeholder="Commentaire" ></textarea><br />
    <input type="submit" name="valider" value="Crée le commentaire" />
    </form>

    <button type="submit" class="btn btn-primary"><a href="blogView">Retour Connexion </a></button>


{% endblock %}