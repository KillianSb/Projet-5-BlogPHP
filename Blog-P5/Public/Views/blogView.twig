{% extends 'base/base.twig' %}

{% block connection %} 
{% if user.username is defined %} 
<p>Bonjours {{user.username}}</p> 
<li><a id="disconnect" href="deconnexion">DECONNEXION</a></li>
{% else %}
<li><a id="connect" href="connexion">CONNEXION</a></li>
{% endif %} 

{% if IsAdmin == true %} 
<li><a id="admin" href="admin">ADMIN</a></li>
{% endif %}
{% endblock connection %}

{% block content %}
    
    <h1>BLOG</h1>

    {% if IsAdmin == true %} 
    {% block links %}

    <h2><a href="admin">Gestion des Posts</a></h2>

    {% endblock links %}
    {% endif %}

    {% if user.username is defined %} 
    <h2><a href="createPost">Création d'un Post</a></h2>
    {% else %}
    <p>Vous n'etes pas connectez pour crée un post !</p> 
    {% endif %} 

    <h1>Liste des posts</h1>


    <div class="containerTablePosts">
        <div class="containerTablePostsBlog">
            <div class="containerPostsBlog">
            {% for post in posts %}
            <div class="postblog">
                <p class="title">{{post.titre}}</p>
                <p class="author">{{post.auteur}}</p>
                <p class="chapo">{{post.chapo}}</p>
                <p class="content">{{post.contenu}}</p>
                <p class="dateCreate">Crée le {{post.dateCreate}}</p>
                {% if post.lastModif != null %} 
                    <p class="dateModif">Dernière modification le {{post.lastModif}}</p>
                {% endif %} 
                <div class="containerContentBlog">
                    <div class="button">
                        <a type="submit" class="postview" name="viewspost" href="viewPost/{{post.id}}">Voir</a>

                        {% if IsAdmin == true %} 
                            <a class="delete" href="deletePost/{{post.id}}">Supprimer</a>
                        {% endif %} 
                    </div>
                </div>
            </div>
            {% endfor %}
            </div>
        </div>
    </div>


{% endblock content %}