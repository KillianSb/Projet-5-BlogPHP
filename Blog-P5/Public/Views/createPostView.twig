{% extends 'base/base.twig' %}

{% block connection %} 
{% if user.username is defined %} 
<p>Bonjours {{user.username}}</p> 
<li><a href="deconnexion">DECONNEXION</a></li>
{% else %}
<li><a href="connexion">CONNEXION</a></li>
{% endif %} 

{% if IsAdmin == true %} 
<li><a href="admin">ADMIN</a></li>
{% endif %}
{% endblock connection %}

{% block content %}
    
    <h1>Création de Blog</h1>

    

    <form name="register" method="post" action="createPost">
    <input type="text" name="title" placeholder="Titre" /><br />
    <input type="text" name="chapo" placeholder="Chapô" /><br />
    <textarea name="content" placeholder="Contenu" ></textarea><br />
    <input type="submit" name="valider" value="Crée le post" />
    </form>
    <button type="submit" class="btn btn-primary"><a href="blog">Retour Blog </a></button>


{% endblock %}